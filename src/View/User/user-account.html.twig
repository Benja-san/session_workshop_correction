{% extends 'Layout/full-width.html.twig' %}

{% block content %}
    {% if user.isconnected %}
        <div class="bg-img"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="p-3 p-md-5 bg-light rounded">
                        <h1>Hello {{ user.pseudo }} !</h1>
                        <p>Welcome to your account.</p>
                        <div class="d-flex flex-column flex-md-row align-items-center align-items-md-start">
                            <img class="rounded-circle me-md-4 mb-4 img-fluid" src="https://fakeimg.pl/200x200/?text={{ user.pseudo }}">
                            <div class="table-responsive-md w-100">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Pseudo</th>
                                        <td>{{ user.pseudo }}</td>
                                    </tr>
                                    <tr>
                                        <th>Firstname</th>
                                        <td>{{ user.firstname }}</td>
                                    </tr>
                                    <tr>
                                        <th>Lastname</th>
                                        <td>{{ user.lastname }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="d-flex">
                            <a class="btn btn-danger ms-auto" href="/logout"><i class="bi bi-box-arrow-right"></i> Disconnect</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    {% else %}
        <div class="container">
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-octagon fs-3"></i>
                There is nothing for you here. Please <a href="/login">login</a> to access content.
            </div>
        </div>
    {% endif %}
{% endblock %}
